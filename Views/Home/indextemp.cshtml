@{
    ViewData["Title"] = "Home Page";
}
<h3>@ViewData["Title"]
<h4>Instructions:</h4>
<p>Change the URL to /pokemon/id... where the id is a pokemon id, you will get information on that Pokemon.</p>
<p>1-721 Pokemons</p>
@if(@ViewBag.Pokemon != null){
    <div>
        <h1>@ViewBag.Pokemon.Name</h1> 
        <h3>Types:</h3>
        <ul>
        @foreach( var type in @ViewBag.Pokemon.Types)
        {
            <li>@type</li>
        }
        </ul>
        <h3>Height: @ViewBag.Pokemon.Height</h3>
        <h3>Weight: @ViewBag.Pokemon.Weight</h3> 
    </div>
}